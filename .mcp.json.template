{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--browser", "webkit"]
    },

    "ESLint": {
      "type": "stdio",
      "command": "npx",
      "args": ["@eslint/mcp@latest"],
      "env": {}
    },
    "vitest-runner": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@madrus/vitest-mcp-server@latest"],
      "env": {
        "VITEST_PROJECT_DIR": "/workspace/life-in-hand/"
      }
    },
    "Context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ]
    },
    "zen": {
      "command": "sh",
      "args": [
        "-c",
        "exec $(which uvx || echo uvx) --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git zen-mcp-server"
      ],
      "env": {
        "PATH": "/home/dev/.local/bin:/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:~/.local/bin",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    }
  }
}